{
  "compilerOptions": {
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "target": "ESNEXT",
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
}
